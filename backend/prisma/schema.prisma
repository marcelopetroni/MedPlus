datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Paciente {
  id              String      @id @default(cuid())
  nome            String
  cpf             String
  dataNascimento  DateTime
  rg              String
  endereco        String
  cep             String
  numero          String
  email           String
  cidade          String
  estado          String

  consultas       Consulta[]
}

model Consulta {
  id             String      @id @default(cuid())
  pacienteId     String
  nomePaciente   String
  especialidade  String
  local          String
  data           DateTime

  paciente       Paciente @relation(fields: [pacienteId], references: [id])
}
